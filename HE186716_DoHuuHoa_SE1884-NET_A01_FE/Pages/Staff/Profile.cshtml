@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<h2>Hồ sơ cá nhân</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Thông tin tài khoản</div>
            <div class="card-body">
                <p><strong>ID:</strong> @ViewContext.HttpContext.Session.GetString("UserId")</p>
                <p><strong>Tên:</strong> @ViewContext.HttpContext.Session.GetString("UserName")</p>
                <p><strong>Email:</strong> @ViewContext.HttpContext.Session.GetString("UserEmail")</p>
                <p><strong>Role:</strong> @ViewContext.HttpContext.Session.GetString("RoleName")</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Đổi mật khẩu</div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu hiện tại</label>
                        <input type="password" name="CurrentPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu mới</label>
                        <input type="password" name="NewPassword" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" name="ConfirmPassword" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                </form>
            </div>
        </div>
    </div>
</div>
