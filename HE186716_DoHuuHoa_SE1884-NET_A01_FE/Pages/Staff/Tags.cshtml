@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.TagsModel
@{
    ViewData["Title"] = "Quản lý Tags";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý Tags</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tagModal" onclick="openCreateModal()">
        + Thêm Tag
    </button>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên Tag</th>
            <th>Ghi chú</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.Tags)
        {
            <tr>
                <td>@tag.TagId</td>
                <td><span class="badge bg-info">#@tag.TagName</span></td>
                <td>@tag.Note</td>
                <td>
                    <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#tagModal"
                            onclick="openEditModal(@tag.TagId, '@tag.TagName', '@tag.Note')">
                        Sửa
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            onclick="openDeleteModal(@tag.TagId, '@tag.TagName')">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Tag Modal -->
<div class="modal fade" id="tagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Thêm Tag</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="TagId" id="tagId" />
                    <input type="hidden" name="handler" id="formHandler" value="Create" />
                    
                    <div class="mb-3">
                        <label class="form-label">Tên Tag</label>
                        <input type="text" name="TagName" id="tagName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="Note" id="tagNote" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="deleteId" id="deleteId" />
                    <p>Bạn có chắc muốn xóa tag: <strong id="deleteName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Thêm Tag';
        document.getElementById('formHandler').value = 'Create';
        document.getElementById('tagId').value = '';
        document.getElementById('tagName').value = '';
        document.getElementById('tagNote').value = '';
    }

    function openEditModal(id, name, note) {
        document.getElementById('modalTitle').textContent = 'Sửa Tag';
        document.getElementById('formHandler').value = 'Update';
        document.getElementById('tagId').value = id;
        document.getElementById('tagName').value = name;
        document.getElementById('tagNote').value = note || '';
    }

    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').textContent = name;
    }
</script>
}
