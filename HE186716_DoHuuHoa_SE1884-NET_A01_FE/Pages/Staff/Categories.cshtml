@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.CategoriesModel
@{
    ViewData["Title"] = "Quản lý Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý Categories</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#categoryModal" onclick="openCreateModal()">
        + Thêm Category
    </button>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Số bài viết</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.Categories)
        {
            <tr>
                <td>@cat.CategoryId</td>
                <td>@cat.CategoryName</td>
                <td>@cat.CategoryDesciption</td>
                <td>
                    <span class="badge @(cat.IsActive == true ? "bg-success" : "bg-secondary")">
                        @(cat.IsActive == true ? "Active" : "Inactive")
                    </span>
                </td>
                <td>@cat.ArticleCount</td>
                <td>
                    <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#categoryModal"
                            onclick="openEditModal(@cat.CategoryId, '@cat.CategoryName', '@cat.CategoryDesciption', @(cat.IsActive == true ? "true" : "false"))">
                        Sửa
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            onclick="openDeleteModal(@cat.CategoryId, '@cat.CategoryName')">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Category Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Thêm Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="CategoryId" id="categoryId" />
                    <input type="hidden" name="handler" id="formHandler" value="Create" />
                    
                    <div class="mb-3">
                        <label class="form-label">Tên Category</label>
                        <input type="text" name="CategoryName" id="categoryName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea name="CategoryDesciption" id="categoryDesc" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" id="isActive" class="form-check-input" value="true" checked />
                            <label class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="deleteId" id="deleteId" />
                    <p>Bạn có chắc muốn xóa: <strong id="deleteName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Thêm Category';
        document.getElementById('formHandler').value = 'Create';
        document.getElementById('categoryId').value = '';
        document.getElementById('categoryName').value = '';
        document.getElementById('categoryDesc').value = '';
        document.getElementById('isActive').checked = true;
    }

    function openEditModal(id, name, desc, active) {
        document.getElementById('modalTitle').textContent = 'Sửa Category';
        document.getElementById('formHandler').value = 'Update';
        document.getElementById('categoryId').value = id;
        document.getElementById('categoryName').value = name;
        document.getElementById('categoryDesc').value = desc;
        document.getElementById('isActive').checked = active;
    }

    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').textContent = name;
    }
</script>
}
