@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.CategoriesModel
@{
    ViewData["Title"] = "Quản lý Categories";
}

<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="notificationToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage">
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý Categories</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#categoryModal" onclick="openCreateModal()">
        + Thêm Category
    </button>
</div>

<!-- Search Form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="Keyword" value="@Model.Keyword" 
                       class="form-control" placeholder="Tìm kiếm theo tên hoặc mô tả danh mục..." />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
                <a asp-page="/Staff/Categories" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Stats info -->
<div class="mb-3">
    <small class="text-muted">
        Hiển thị @((Model.PageIndex - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) 
        trong tổng số @Model.TotalCount danh mục
    </small>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th>Số bài viết</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Categories.Any())
        {
            @foreach (var cat in Model.Categories)
            {
                <tr>
                    <td>@cat.CategoryId</td>
                    <td>@cat.CategoryName</td>
                    <td>@cat.CategoryDesciption</td>
                    <td>
                        <span class="badge @(cat.IsActive == true ? "bg-success" : "bg-secondary")">
                            @(cat.IsActive == true ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>@cat.ArticleCount</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#categoryModal"
                                onclick='openEditModal(@cat.CategoryId, @Html.Raw(Json.Serialize(cat.CategoryName)), @Html.Raw(Json.Serialize(cat.CategoryDesciption)), @(cat.IsActive == true ? "true" : "false"))'>
                            Sửa
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                onclick='openDeleteModal(@cat.CategoryId, @Html.Raw(Json.Serialize(cat.CategoryName)))'>
                            Xóa
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous -->
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a class="page-link" asp-page="/Staff/Categories" 
                   asp-route-keyword="@Model.Keyword" 
                   asp-route-pageIndex="@(Model.PageIndex - 1)">
                    Trước
                </a>
            </li>

            @{
                var startPage = Math.Max(1, Model.PageIndex - 2);
                var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="/Staff/Categories" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="1">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-page="/Staff/Categories" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="@i">@i</a>
                </li>
            }

            @if (endPage < Model.TotalPages)
            {
                @if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" asp-page="/Staff/Categories" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="@Model.TotalPages">@Model.TotalPages</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a class="page-link" asp-page="/Staff/Categories" 
                   asp-route-keyword="@Model.Keyword" 
                   asp-route-pageIndex="@(Model.PageIndex + 1)">
                    Sau
                </a>
            </li>
        </ul>
    </nav>
}

<!-- Category Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Thêm Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="CategoryId" id="categoryId" />
                    <input type="hidden" name="handler" id="formHandler" value="Create" />
                    
                    <div class="mb-3">
                        <label class="form-label">Tên Category</label>
                        <input type="text" name="CategoryName" id="categoryName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea name="CategoryDesciption" id="categoryDesc" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="IsActive" id="isActive" class="form-check-input" value="true" checked />
                            <label class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="deleteId" id="deleteId" />
                    <p>Bạn có chắc muốn xóa: <strong id="deleteName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Show toast if there's a message
        var message = '@Html.Raw(Model.Message ?? "")';
        var isSuccess = @(Model.IsSuccess ? "true" : "false");
        
        if (message) {
            showToast(message, isSuccess);
        }
    });

    function showToast(message, isSuccess) {
        var toastEl = document.getElementById('notificationToast');
        var toastBody = document.getElementById('toastMessage');
        var closeBtn = toastEl.querySelector('.btn-close');
        
        // Set message
        toastBody.textContent = message;
        
        // Remove previous classes and styles
        toastEl.classList.remove('text-bg-success', 'text-bg-danger', 'bg-success', 'bg-danger', 'text-white');
        toastEl.style.backgroundColor = '';
        toastEl.style.color = '';
        
        // Set color based on success/error
        if (isSuccess) {
            toastEl.classList.add('bg-success', 'text-white');
            toastEl.style.backgroundColor = '#198754'; // Bootstrap green
        } else {
            toastEl.classList.add('bg-danger', 'text-white');
            toastEl.style.backgroundColor = '#dc3545'; // Bootstrap red
        }
        
        // White text for better contrast 
        toastEl.style.color = '#ffffff';
        
        // Ensure close button is visible on both backgrounds
        closeBtn.classList.add('btn-close-white');
        
        // Show toast
        var toast = new bootstrap.Toast(toastEl, {
            autohide: true,
            delay: 4000
        });
        toast.show();
    }

    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Thêm Category';
        document.getElementById('formHandler').value = 'Create';
        document.getElementById('categoryId').value = '';
        document.getElementById('categoryName').value = '';
        document.getElementById('categoryDesc').value = '';
        document.getElementById('isActive').checked = true;
    }

    function openEditModal(id, name, desc, active) {
        document.getElementById('modalTitle').textContent = 'Sửa Category';
        document.getElementById('formHandler').value = 'Update';
        document.getElementById('categoryId').value = id;
        document.getElementById('categoryName').value = name;
        document.getElementById('categoryDesc').value = desc;
        document.getElementById('isActive').checked = active;
    }

    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').textContent = name;
    }
</script>
}

